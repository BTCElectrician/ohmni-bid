{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Entity",
  "type": "object",
  "required": [
    "entity_id",
    "primary_name",
    "entity_type",
    "roles",
    "confidence",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "entity_id": {
      "type": "string",
      "pattern": "^en_[a-f0-9]{16}$"
    },
    "primary_name": {
      "type": "string",
      "minLength": 1
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "entity_type": {
      "type": "string",
      "enum": [
        "organization",
        "government_agency",
        "vendor",
        "training_provider",
        "union",
        "person",
        "unknown"
      ]
    },
    "jurisdiction": {
      "type": ["string", "null"]
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["entity_id", "relationship_type"],
        "properties": {
          "entity_id": {
            "type": "string"
          },
          "relationship_type": {
            "type": "string"
          },
          "evidence_ids": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "default": []
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}

