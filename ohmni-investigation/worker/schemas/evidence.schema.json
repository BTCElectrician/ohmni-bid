{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence",
  "type": "object",
  "required": [
    "evidence_id",
    "source_url",
    "title",
    "excerpt",
    "summary",
    "relevance_tags",
    "confidence",
    "retrieved_at",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "evidence_id": {
      "type": "string",
      "pattern": "^ev_[a-f0-9]{16}$"
    },
    "source_url": {
      "type": "string",
      "format": "uri"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "excerpt": {
      "type": "string",
      "minLength": 1
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "relevance_tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "retrieved_at": {
      "type": "string",
      "format": "date-time"
    },
    "published_date": {
      "type": ["string", "null"],
      "format": "date"
    },
    "content_hash": {
      "type": ["string", "null"]
    },
    "archive_path": {
      "type": ["string", "null"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}

